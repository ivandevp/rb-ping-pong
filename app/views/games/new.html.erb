<h1 class="page-header">Log Game</h1>

<%= form_for @game, html: { class: "form-horizontal" } do |f| %>
    <div class="form-group">
        <label for="played_at" class="col-sm-2 control-label">Date Played</label>
        <div class="col-sm-10">
            <%= f.date_select :played_at, {}, { class: "form-control" } %>
        </div>
    </div>
    <div class="form-group">
        <label for="played_at" class="col-sm-2 control-label">Opponent</label>
        <div class="col-sm-10">
            <%= f.collection_select :opponent_id, @opponents, :id, :name, { include_blank: true } , { class: "form-control" } %>
        </div>
    </div>
    <div class="form-group">
        <label for="played_at" class="col-sm-2 control-label">Your Score:</label>
        <div class="col-sm-10">
            <%= f.text_field :user_score, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <label for="played_at" class="col-sm-2 control-label">Their Score:</label>
        <div class="col-sm-10">
            <%= f.text_field :opponent_score, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Save", class: "btn btn-default" %>
            <%= link_to "Cancel", root_path %>
        </div>
    </div>
<% end %>
